<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password digest:</strong>
  <%= @user.password_digest %>
</p>

<p>
  <strong>Lists:</strong>
  <% @user.lists.all.each do |l| %>
    <li><%= link_to(l.name, list_path(l.id)) %></li>
  <% end %>
</p>

